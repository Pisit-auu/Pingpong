generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")     // ใช้ connection pooling
  directUrl  = env("DIRECT_URL")       // ใช้ non-pooling URL สำหรับ migrate
}

model PlayCounter {
  id       Int  @id @default(autoincrement())
  finished Int  @default(0)
}
